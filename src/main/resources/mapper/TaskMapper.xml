<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.fengling.gugutask.dao.TaskMapper">

    <resultMap id="TaskResultMap" type="org.fengling.gugutask.pojo.Task">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="detail" property="detail"/>
        <result column="priority" property="priority"/>
        <result column="date1" property="date1"/>
        <result column="date2" property="date2"/>
        <result column="status" property="status"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="user_id" property="userId"/>
        <result column="type_id" property="typeId"/>
    </resultMap>

    <!-- 自定义通过 userId 查询任务的 SQL 语句 -->
    <select id="findTasksByUserId" resultMap="TaskResultMap">
        SELECT *
        FROM tasks
        WHERE user_id = #{userId}
    </select>

</mapper>
